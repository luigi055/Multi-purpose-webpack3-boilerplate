{
  "name": "web-boilerplate",
  "version": "1.0.0",
  "description": "Simple boilerplate using webpack3",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "prod": "export NODE_ENV=production || SET \"NODE_ENV=production\" && node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js -p",
    "build-dev": "rm -rf ./public && webpack",
    "build-dev--watch": "webpack -d -w",
    "build": "export NODE_ENV=production || SET \"NODE_ENV=production\" && rm -rf ./public && webpack -p",
    "clear": "rm -rf ./public",
    "lint": "eslint **/*.{js} --quiet",
    "format": "prettier --write --single-quote --print-width=120 --parser=flow --tab-width=2 \"src/**/*.{js}\""
  },
  "repository": {},
  "author": "Pedro La Rosa",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.2",
    "babel-loader": "7.1.2",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.1",
    "css-loader": "0.28.7",
    "css-mqpacker": "6.0.1",
    "eslint": "4.12.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "7.5.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "html-loader": "0.5.1",
    "html-webpack-plugin": "2.30.1",
    "image-webpack-loader": "3.4.2",
    "node-sass": "4.7.2",
    "pixrem": "4.0.1",
    "postcss-loader": "2.0.9",
    "postcss-vmin": "3.0.0",
    "postcss-will-change": "2.0.0",
    "prettier": "1.8.2",
    "resolve-url-loader": "2.2.0",
    "sass-loader": "^6.0.2",
    "script-loader": "0.7.2",
    "style-loader": "0.19.0",
    "stylelint": "8.3.1",
    "stylelint-config-standard": "18.0.0",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.5"
  },
  "dependencies": {
    "bootstrap": "4.0.0-beta",
    "express": "4.16.2",
    "font-awesome": "^4.7.0",
    "jquery": "^3.1.1",
    "popper.js": "1.12.9"
  }
}
